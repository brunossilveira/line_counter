<h3 class="title"><%= l(:permission_add_issue_branches) %></h3>

<%= form_tag({:controller => 'branches',
              :action => ('append'),
              :object_type => (issue && issue.class.name.underscore),
              :object_id => issue.id,
              :project_id => issue.project.id},
             :remote => true,
             :method => :post,
             :id => 'new-branch-form') do %>

    <p><%= label_tag 'branch_search', l(:label_branch_search) %><%= text_field_tag 'branch_search', nil %></p>
    <div id="branches_for_issue">
      <% issue.project.repositories.each do |rep| %>
          <p><strong><%= label_tag "repo#{rep.id}", rep.identifier %></strong></p>
          <% rep.branches.each do |branch| %>
              <p><%= check_box_tag 'branches[]', "#{rep.id},#{branch}" %> <%= branch %></p>
          <% end %>
      <% end %>
    </div>
    <p class="buttons">
      <%= submit_tag l(:button_add), :name => nil, :onclick => "hideModal(this);" %>
      <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
    </p>
<% end %>
